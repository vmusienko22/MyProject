<Page x:Class="UI.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden" />
        <TextBox Name ="Login_TextBox" HorizontalAlignment="Left" Height="23" Margin="260,121,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="160"/>
        <TextBox Name ="Password_TextBox"  HorizontalAlignment="Left" Height="23" Margin="260,194,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="160"/>
        <Button Name="SignIn_Button" Content="Sign in" HorizontalAlignment="Left" Margin="260,255,0,0" VerticalAlignment="Top" Width="51" Click="SignIn_Button_Click"/>

    </Grid>
</Page>
